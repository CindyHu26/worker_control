{
  "name": "worker-control-server",
  "version": "1.0.0",
  "description": "TMS Backend Server",
  "main": "dist/index.js",
  "scripts": {
    "start": "node dist/src/index.js",
    "dev": "ts-node-dev --respawn --transpile-only src/index.ts",
    "build": "tsc",
    "db:migrate": "prisma migrate dev",
    "db:reset": "ts-node prisma/reset-db.ts",
    "db:seed": "prisma db seed",
    "db:studio": "prisma studio",
    "run-update": "git pull && pnpm install && pnpm run db:migrate && pm2 restart tms-server"
  },
  "prisma": {
    "seed": "ts-node prisma/seed.ts"
  },
  "dependencies": {
    "@prisma/client": "^5.22.0",
    "@types/bcryptjs": "^2.4.6",
    "@types/cookie-parser": "^1.4.10",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/node-cron": "^3.0.11",
    "@worker-control/shared": "workspace:*",
    "archiver": "^7.0.1",
    "bcryptjs": "^3.0.3",
    "cookie-parser": "^1.4.7",
    "cors": "^2.8.5",
    "csv-stringify": "^6.6.0",
    "date-fns": "^4.1.0",
    "date-fns-tz": "^3.2.0",
    "docxtemplater": "^3.67.6",
    "dotenv": "^16.0.0",
    "exceljs": "^4.4.0",
    "express": "^4.18.2",
    "jsonwebtoken": "^9.0.3",
    "minio": "^8.0.6",
    "multer": "^2.0.2",
    "node-cron": "^4.2.1",
    "pdf-lib": "^1.17.1",
    "pinyin-pro": "^3.27.0",
    "pizzip": "^3.2.0",
    "winston": "^3.19.0",
    "winston-daily-rotate-file": "^5.0.0",
    "xlsx": "^0.18.5",
    "zod": "^4.2.1"
  },
  "devDependencies": {
    "@cucumber/cucumber": "^12.4.0",
    "@types/archiver": "^7.0.0",
    "@types/chai": "^5.2.3",
    "@types/cors": "^2.8.12",
    "@types/express": "^4.17.25",
    "@types/minio": "^7.1.0",
    "@types/multer": "^2.0.0",
    "@types/node": "^18.19.130",
    "@types/supertest": "^6.0.3",
    "chai": "^6.2.1",
    "prisma": "^5.0.0",
    "supertest": "^7.1.4",
    "ts-node": "^10.9.2",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.0.0"
  }
}